<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:BackBack"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             x:Class="BackBack.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <Color x:Key="ViewBackground">#2D2D30</Color>
        <ExperimentalAcrylicMaterial x:Key="ViewBackgroundMaterial" BackgroundSource="Digger" TintColor="Black" TintOpacity="1" MaterialOpacity="0.65"/>
        <ExperimentalAcrylicMaterial x:Key="ElementBackgroundMaterial" BackgroundSource="Digger" TintColor="Black" TintOpacity="1" MaterialOpacity="0.85"/>
        <ExperimentalAcrylicMaterial x:Key="SelectedElementBackgroundMaterial" BackgroundSource="Digger" TintColor="Blue" TintOpacity="0.5" MaterialOpacity="1"/>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
        <StyleInclude Source="avares://BackBack/Assets/Icons.axaml"/>
    </Application.Styles>
</Application>
